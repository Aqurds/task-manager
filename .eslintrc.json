{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": ["import"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "import/extensions": [ 1, {
        "js": "never", "json": "never"
      }],
      "no-unused-vars": "off",
      "no-use-before-define": ["error", {
        "functions": false
      }],
      "no-alert": "off",
      "no-undef": "off",
      "operator-linebreak": "off",
      "quotes": "off",
      "comma-dangle": "off"
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }